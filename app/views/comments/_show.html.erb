<div class="media mb-4">
  <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
  <div class="media-body post-preview">
    <%= comment.body %>
    <p class="post-meta">
      Commented by
      <%= link_to comment.user.email, "#" %>
      <%= time_ago_in_words comment.updated_at %>
    </p>
  </div>
</div>