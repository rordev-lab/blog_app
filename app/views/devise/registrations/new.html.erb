<%= render 'layouts/shared/main_header' %>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <h2>Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls" %>
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Email" %>
          </div>
        </div>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
          </div>
        </div>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "password Confirmation" %>
          </div>
        </div>
        <br>
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
